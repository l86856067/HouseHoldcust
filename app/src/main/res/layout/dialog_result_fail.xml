<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_home_notice_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.MainActivity">

    <LinearLayout
        android:id="@+id/dialog_fail_title"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dialog_fail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="接单失败"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/dialog_fail_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_fail_title"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:padding="30dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/dialog_fail_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="我知道了"
        android:gravity="center"
        android:background="@drawable/shape_successdialog_themebotton"
        android:layout_below="@id/dialog_fail_message"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background"
    tools:context="android.app.wolf.household.view.activity.MerchantActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_theme">
        <ImageView
            android:id="@+id/merchant_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_of_left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="商户信息"
            android:textSize="16sp"
            android:textColor="@color/app_white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/app_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="商户名："
            android:gravity="center"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/merchant_merName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="棒棒棒家政服务"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/app_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="商户名："
            android:gravity="center"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/merchant_merAddre"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="100dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/merchant_staff"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/app_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="员工列表"
            android:gravity="center"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_of_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>
